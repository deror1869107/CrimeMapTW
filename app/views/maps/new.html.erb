<div class="container">
	<div class="box">
		<div class="row">
			<div class="col-md-4">
				<%= simple_form_for @map, html: { multipart: true} do |f| %>
				    <div class="input-group">
						<span class="input-group-addon">標題</span>
						<%= f.text_field :title, :class => 'form-control', :placeholder => 'Title' %>
					</div><br>
					<%= f.file_field :attachment, :class => 'filestyle', :'data-placeholder' => 'No file', :'data-buttonName' => 'btn btn-primary', :'data-buttonText' => '瀏覽檔案' %>
					<br>
					<div class="btn-group btn-group-justified">
						<div class="btn-group">
							<button class="btn btn-info btn-lg" disabled>預覽地圖</button>
						</div>
						<div class="btn-group">
						    <input type="submit" class="btn btn-success btn-lg" value="上傳資料">
						</div>
					</div>
				<% end %>
			</div>
			<div class="col-md-8" style="text-align: center">

				<h1>資料上傳</h1>
				<p>將您的資料視覺化為資訊地圖。<br>
				只要上傳您的資料，我們將為您處理接下來的一切。</p><br>
				<div class="circle" style="margin: auto"><span class="glyphicon glyphicon-list-alt"></span></div>

			</div>
    	</div>
	</div>
</div>

<script>

$(document).ready(function () {

  $("#file").filestyle({buttonText: "瀏覽檔案", buttonName: "btn-primary", placeholder: "No file"});
  // $("#file").filestyle({buttonName: "btn-primary"});

});
</script>
